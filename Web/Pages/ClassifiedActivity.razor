    private async Task HandleServiceId((int Id, ProjectCategory Category) data)
    {
        ServiceId = data.Id;
        Category = data.Category;
        await LoadData(data.Category);
        await Task.CompletedTask;
        IssuedClassifiedList.Clear();
        IssuedClassifiedList = await api.GetIssuedClassifiedAsync(data.Id);
        await IssuedClassifiedlinksChecker();
        StateHasChanged();
    }


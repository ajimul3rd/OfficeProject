    private async Task IssuedClassifiedlinksChecker()
    {
        if (IssuedClassifiedList.Any())
        {
            var issuedUrls = IssuedClassifiedList
                .Where(x => !string.IsNullOrEmpty(x.SiteUrl))
                .Select(x => x.SiteUrl)
                .ToHashSet();

            // Backlinks = Backlinks
            //     .Select(b =>
            //     {
            //         b.IsIssuee = !string.IsNullOrEmpty(b.SiteUrl) && issuedUrls.Contains(b.SiteUrl);
            //         return b;
            //     })
            //     .ToList();
            Classified = Classified
           .Where(b => string.IsNullOrEmpty(b.SiteUrl) || !issuedUrls.Contains(b.SiteUrl))
           .ToList();

            if (Classified.Count == 0)
            {
                currentPage += 1;   // Increment current page
                await GoToPage(currentPage); // Navigate to the next page
            }

            StateHasChanged();
        }
    }

